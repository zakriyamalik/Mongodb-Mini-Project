<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #27272a; /* bg-zinc-900 */
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
        }
        .container {
            width: 100%;
            max-width: 400px;
            text-align: center;
        }
        .form-container {
            background-color: #3f3f46; /* slightly lighter shade for contrast */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            margin-top: 20px;
            width: 100%;
        }
        .form-container form {
            display: flex;
            flex-direction: column;
        }
        .form-container input,
        .form-container textarea {
            margin-bottom: 15px;
            padding: 10px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
        }
        .form-container input[type="submit"] {
            background-color: #4f46e5; /* a blue button */
            color: white;
            cursor: pointer;
        }
        .form-container input[type="submit"]:hover {
            background-color: #4338ca; /* darker blue on hover */
        }
        .logout-button {
            background-color: #e53e3e; /* red button */
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }
        .logout-button:hover {
            background-color: #c53030; /* darker red on hover */
        }
        .posts-container {
            background-color: #3f3f46;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            margin-top: 20px;
            width: 100%;
            text-align: left;
        }
        .post {
            background-color: #4a4a4a;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 10px;
        }
        .post-buttons {
            display: flex;
            justify-content: space-between;
        }
        .like-button, .edit-button {
            background-color: #4f46e5; /* blue button */
            color: white;
            border: none;
            border-radius: 4px;
            padding: 5px 10px;
            cursor: pointer;
        }
        .like-button:hover, .edit-button:hover {
            background-color: #4338ca; /* darker blue on hover */
        }
        h3, h4 {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Hi <%= user.name %></h3>
        <p>You can create a post here:</p>
        <div class="form-container">
            <form action="/post" method="post">
                <textarea rows="5" placeholder="Write your post here..." name="content"></textarea>
                <input type="submit" value="Create Post">
            </form>
        </div>
        <form action="/logout" method="post">
            <button class="logout-button">Logout</button>
        </form>
        <div class="posts-container">
            <h4>Your Posts:</h4>
            <% user.posts.reverse().forEach(function(post) { %>
                <div class="post">
                    <p><%= post.content %></p>
                    <div class="post-buttons">
                        <span>Likes: <%= post.likes.length %></span>
                        <form action="/like/<%= post._id %>" method="get">
                            <button class="like-button" type="submit">Like</button>
                        </form>
                        <form action="/edit/<%= post._id %>" method="get">
                            <button class="edit-button" type="submit">Edit</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
